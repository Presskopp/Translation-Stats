{
  "name": "pedro-mendonca/translation-stats",
  "description": "Show plugins translation stats on your WordPress install.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Pedro MendonÃ§a",
      "email": "ped.gaspar@gmail.com",
      "homepage": "https://pedromendonca.pt"
    }
  ],
  "require": {
    "php": ">=5.6",
    "gettext/gettext": "^4.8.1"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.6.0",
    "wp-coding-standards/wpcs": "^2.2.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1.0",
    "szepeviktor/phpstan-wordpress": "^0.5.0"
  },
  "scripts": {
    "lint": "phpcs -v --standard=phpcs.xml",
    "lint-fix": "phpcbf -v --standard=phpcs.xml",
    "lint-i": "phpcs -i",
    "stan": "phpstan analyse -c phpstan.neon --memory-limit=2G"
  }
}
